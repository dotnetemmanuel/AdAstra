@page
@model AdAstra.Pages.Admin.AdminReport.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Reporter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportedPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportedReply)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Report) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reporter.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedPost.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedReply.Content)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
