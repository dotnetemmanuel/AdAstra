        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.ReportedAt)
        </dd>
        <dt class="col-sm-2">
